{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "outDir": "dist",                          
    "rootDir": "src",
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}